{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["./types", "./node_modules/@types"]
    },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
